<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.archismansarkar.dynamicviewaddremove.StartPageActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".StartPageActivity" >

        <Button
            android:id="@+id/arvtf"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ths"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Add/Remove/View Transformer"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="131dp" />

        <Button
            android:id="@+id/ths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Transformer Health Status"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="216dp" />

        <ImageView
            android:id="@+id/imageTF"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/transformer" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageTF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="monospace"
            android:text="TRANSFORMER HEALTH MONITORING"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>