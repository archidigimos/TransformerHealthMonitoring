<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.archismansarkar.dynamicviewaddremove.DataDisplayActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DataDisplayActivity">


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/VoltageR"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Vr"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/VoltageY"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Vy"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/VoltageB"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Vb"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/CurrentR"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Cr"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/CurrentY"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Cy"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/CurrentB"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Cb"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

                <TextView
                    android:id="@+id/Timestamp"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:padding="5dp"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/background_light"></TextView>

            </TableRow>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/data_logging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>